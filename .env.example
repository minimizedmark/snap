# ─────────────────────────────────────────────────────────────
# Snap Calls — Environment Configuration
# cp .env.example .env  then fill in your real values
# ─────────────────────────────────────────────────────────────

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/snapcalls"

# Encryption
# REQUIRED — must be exactly 64 hex characters (32 bytes for AES-256-GCM)
# The value below is a valid DEV-ONLY key. Generate your own for production:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="0c859f62bd84ae7a2d144dbe96722a4fdbf0d3a7888bf9d8976021b388512f6e"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"
APP_URL="http://localhost:3000"

# Twilio (admin account — all numbers live under this account)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+1234567890"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# SnapLine $20/month subscription price — create in Stripe Dashboard → Products
STRIPE_SNAPLINE_PRICE_ID="price_..."
# Basic plan price ID (if used for subscription tracking)
STRIPE_BASIC_PRICE_ID="price_..."

# Email (Resend)
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@send.snappcalls.app"

# OpenAI — used for Whisper voicemail transcription only
# Leave blank to skip transcription (AI writer handles missing transcript gracefully)
OPENAI_API_KEY="sk-..."

# AI Write Bot — any OpenAI-compatible endpoint
# Set AI_BASE_URL to your self-hosted model server (e.g. http://localhost:11434/v1 for Ollama)
# Leave AI_BASE_URL blank to use OpenAI directly (requires OPENAI_API_KEY)
AI_BASE_URL=""
AI_MODEL="gpt-4o-mini"
# API key for your model server — leave blank if not required
AI_API_KEY=""

# Cron job authentication
# Use any random secret — must match what your cron scheduler sends as Bearer token
CRON_SECRET="replace-with-random-secret"

# Admin Panel
# SHA-256 hash of your admin password — NEVER store the plaintext password here
# Generate with: node -e "console.log(require('crypto').createHash('sha256').update('yourpassword').digest('hex'))"
ADMIN_PASSWORD_HASH="your-sha256-hash-here"
ADMIN_EMAIL="admin@yourcompany.com"
ADMIN_PHONE="+1234567890"
